extends base.pug



block style 
    style
      include ../static/style.css
      include ../static/mobile.css

block content 
    div.contact-form
        h1 Fill this form to contact us
            form(action="/contact", method="post")

                input(type="text", name="myname", placeholder="Enter your name")
                input(type="text" name="age",placeholder="Enter your age")
                input(type="text" name="phone", placeholder="Enter your contact number", inputmode="numeric")
                input(type="e-mail" name="email", placeholder="xyz@gmail.com")
                input(type="text" name="locality", placeholder="Enter your address")

                textarea(name="feedback", cols="20", rows="5", placeholder="Write something here...")

                button.btn 
                    |Submit 